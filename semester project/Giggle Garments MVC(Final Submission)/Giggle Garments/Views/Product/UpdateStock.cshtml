@{
    Layout = null;
}
@using Giggle_Garments_MVC.Models;
@model Stock
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .input-validation-error {
            border: 1px solid red;
        }
    </style>

</head>
<body>
    <section class="h-100">
        <div class="container ">
            <div class="row justify-content-sm-center h-100 mt-5">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <p class="fs-4 card-title fw-medium mb-4 text-center" style="font-family:Algerian">
                                Update Stock Info <br />
                                <span class="text-muted fw-light " style="font-family:'Arial Narrow', sans-serif;font-size:medium">(Leave empty which is not applicable)</span>
                            </p>
                            <form method="post" asp-action="UpdateStock">
                                @* <div class="mb-3">
                                    <label asp-for="Id" class="mb-2">Product Id</label>
                                    <input asp-for="Id" class="form-control" readonly />
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                </div> *@
                                <div class="mb-3">
                                    <div class="row justify-content-evenly">
                                        <div class="col-5">
                                            <label asp-for="M0_3" class="mb-2">0/3-M</label>
                                            <input asp-for="M0_3" class="form-control" />
                                        </div>
                                        <div class="col-5">
                                            <label asp-for="M3_6" class="mb-2">3/6-M</label>
                                            <input asp-for="M3_6" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="row justify-content-evenly">
                                        <div class="col-5">
                                            <label asp-for="M6_9" class="mb-2">6/9-M</label>
                                            <input asp-for="M6_9" class="form-control" />
                                        </div>
                                        <div class="col-5">
                                            <label asp-for="M9_12" class="mb-2">9/12-M</label>
                                            <input asp-for="M9_12" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="row justify-content-evenly">
                                        <div class="col-5">
                                            <label asp-for="M12_18" class="mb-2">12/18-M</label>
                                            <input asp-for="M12_18" class="form-control" />
                                        </div>
                                        <div class="col-5">
                                            <label asp-for="M18_24" class="mb-2">18/24-M</label>
                                            <input asp-for="M18_24" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="row justify-content-evenly">
                                        <div class="col-5">
                                            <label asp-for="M24_36" class="mb-2">24/36-M</label>
                                            <input asp-for="M24_36" class="form-control" />
                                        </div>
                                        <div class="col-5">
                                            <label asp-for="Y3_4" class="mb-2">3/4-Y</label>
                                            <input asp-for="Y3_4" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="row justify-content-evenly">
                                        <div class="col-5">
                                            <label asp-for="Y4_5" class="mb-2">4/5-Y</label>
                                            <input asp-for="Y4_5" class="form-control" />
                                        </div>
                                        <div class="col-5">
                                            <label asp-for="Y5_6" class="mb-2">5/6-Y</label>
                                            <input asp-for="Y5_6" class="form-control" />
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="row justify-content-evenly">
                                        <div class="col-5">
                                            <label asp-for="Y6_7" class="mb-2">6/7-Y</label>
                                            <input asp-for="Y6_7" class="form-control" />
                                        </div>
                                        <div class="col-5">
                                            <label asp-for="Y7_8" class="mb-2">7/8-Y</label>
                                            <input asp-for="Y7_8" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="row justify-content-evenly">
                                        <div class="col-5">
                                            <label asp-for="Y8_9" class="mb-2">8/9-Y</label>
                                            <input asp-for="Y8_9" class="form-control" />
                                        </div>
                                        <div class="col-5">
                                            <label asp-for="Y9_10" class="mb-2">9/10-Y</label>
                                            <input asp-for="Y9_10" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary w-50">
                                        Update Now
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer py-3 border-0 text-center">
                            © 2024 Giggle Garments
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

