@{
    Layout = null;
}
@using Giggle_Garments_MVC.Models;
@model Product
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
    <style>
        .input-validation-error{
            border:1px solid red;
        }

        input[type="file"] {
            display: none;
        }

        
    </style>

</head>
<body>
    <section class="h-100">
        <div class="container ">
            <div class="row justify-content-sm-center h-100 mt-5">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <p class="fs-4 card-title fw-medium mb-4 text-center" style="font-family:Algerian">Add Product</p>
                            <form method="post" action="/product/addProduct" enctype="multipart/form-data" >
                                    <div class="mb-3">
                                    <label asp-for="Name" class="mb-2">Product Name</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                     <div class="mb-3">
                                    <label asp-for="Description" class="mb-2 w-100">Description</label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                    <label asp-for="Price" class="mb-2">Product Price</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                      
                                     <label asp-for="CategoryId" class="mb-2">Category Id</label>
                                    <input asp-for="CategoryId" class="form-control" />
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                    <div class="text-center">
                                    <label for="file-upload"  class="mb-3   w-50 text-center" style="cursor: pointer;border: 2px dashed; border-radius:10px;">
                                     <i class="bi bi-cloud-upload fs-1"></i><br>

                                        <input id="file-upload" type="file" name="myfile" onchange="updateText(this)" />
                                        <p id="file-text" class="text-muted  mx-2 text-center">Upload or drop a image here</p>
                                
                                </label>
                                  </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary w-50">
                                            Save Product
                                        </button>
                                    </div>
                                </form>
                        </div>
                        <div class="card-footer py-3 border-0 text-center">
                            © 2024 Giggle Garments
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
    <script>
        function updateText(input) {
            // Get the uploaded file
            const file = input.files[0];

            // Check if a file is selected
            if (file) {
                // Get the file name
                const fileName = file.name;

                // Update the text element with the file name
                document.getElementById("file-text").textContent = fileName;
            }
        }
    </script>


    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

