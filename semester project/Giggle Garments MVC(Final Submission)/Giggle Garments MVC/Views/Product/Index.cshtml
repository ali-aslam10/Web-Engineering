@using System.Globalization
@{
    Layout = null;
}

@model List<Product>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        th,td{
         white-space: nowrap;
        text-align:center;
        }

        td img {
            max-height: 70px;
        }
    </style>

</head>
<body>
    <div class="container mt-5">
        <div class="row-col-1">
            <div class="col text-center">
                <p class="fw-medium fs-3" style="font-family:Algerian"> Giggle Garments Products</p>
            </div>
       
            <div class="col table-responsive">
                <table class="table table-bordered  table-light table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th >Product Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Category Id</th>
                            <th>Action</th>

                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td><img src="@p.ImagePath.Substring(p.ImagePath.IndexOf("wwwroot")).Replace("wwwroot","")" alt="Product image" /> </td>
                               
                                <td>@p.Id</td>
                                <td>@p.Name</td>
                                <td>@p.Description</td>
                                <td>Rs.@string.Format("{0:N2}",p.Price) </td>
                                <td>@p.CategoryId</td>
                                <td>
                                    <a asp-action="UpdateProduct" class="btn btn-warning" asp-route-id="@p.Id"><i class="bi bi-pencil"></i>Update</a>
                                    <a asp-action="removeProdct" class="btn btn-danger" asp-route-id="@p.Id"><i class="bi bi-trash3"></i>Remove</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mb-3">
                <a asp-action="addProduct" class="btn btn-info">Add Product</a>
                <a asp-action="viewStock" class="btn btn-info ms-3">Stock Info</a>
                </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
