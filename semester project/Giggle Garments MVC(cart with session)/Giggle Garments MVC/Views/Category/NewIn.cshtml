@{
    Layout = "_CustomLayout";
}
@model List<Product>;
<title>Giggle Garments-New Arrivals</title>
<div class="container mt-4">
    <div class="row justify-content-evenly gy-3">
        @foreach (var p in Model)
        {
            <div class="card border-0" style="width: 18rem;">
                <a asp-controller="Category" asp-action="specific" asp-route-id="@p.Id">
                    <img src="@p.ImagePath.Substring(p.ImagePath.IndexOf("wwwroot")).Replace("wwwroot","")" class="card-img-top" alt="Product image">
                    <div class="card-body text-center">
                        <p class="card-title fw-medium text-capitalize">@p.Name <br /> <span>(Product ID: @p.Id)</span></p>
                        <h6 class="card-subtitle mb-2 text-body-secondary">Rs.@string.Format("{0:N2}", p.Price)</h6>
                    </div>
                </a>
            </div>

        }
    </div>
</div>