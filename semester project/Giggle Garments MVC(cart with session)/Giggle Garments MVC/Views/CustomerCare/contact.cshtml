@{
    Layout = "_CustomLayout";
}
<title>Giggle Garments-Contact</title>
<div class="container mt-5 ">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 text-center">
            <p class="fs-5 text-light-emphasis" style="font-family:algerian;">We’re here to quickly provide you with the info and services you need & answer any question you may have.</p>
            <hr class="w-50 mx-auto">
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-7">

            <p class="fw-medium text-uppercase"> send us an email:</p>
            <p class="mt-3">Ask us anything! We'll get back to you as soon as possible</p>
            <form class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="Fname" class="mb-2">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="phone" class="mb-2">Phone</label>
                    <input type="tel" class="form-control" id="phone" name="phone">
                </div>
                <div class="mb-3">
                    <label for="email" class="mb-2">Email<span class="text-danger ms-1">*</span></label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="mb-2">Message<span class="text-danger ms-1">*</span></label>
                    <textarea class="form-control " rows="6" placeholder="Enter a message here" id="message" name="message" required></textarea>
                </div>
                <div class="">
                    <button type="submit" class="btn btn-dark btn-block  fw-medium ">
                        SUBMIT CONTACT
                    </button>
                </div>

            </form>
        </div>
        <div class="col-md-5 text-md-center mt-5 mt-md-0 ">

            <p class="fw-medium text-uppercase"> contact details</p>
            <p class="fs-5 text-muted" style="font-family: college;">+92 312 5556667</p>
            <p class="text-muted" style="font-family: college;">Monday to Friday: 9am - 6pm</p>
            <p class="text-muted" style="font-family: college;">Or you can reach us via email at<br> gigglehelp1090@gmail.com</p>

        </div>
    </div>

</div>