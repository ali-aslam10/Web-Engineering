@{
    Layout = null;
}

@model List<Stock>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        th, td {
            white-space: nowrap;
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="container mt-5">
        <div class="row-col-1">
            <div class="col text-center">
                <p class="fw-medium fs-3" style="font-family:Algerian"> Quantity in Hand</p>
            </div>

            <div class="col table-responsive">
                <table class="table table-bordered table-light table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Product Id</th>
                            <th>0/3-M</th>
                            <th>3/6-M</th>
                            <th>6/9-M</th>
                            <th>9/12-M</th>
                            <th>24/36-M</th>
                            <th>3/4-Y</th>
                            <th>4/5-Y</th>
                            <th>5/6-Y</th>
                            <th>6/7-Y</th>
                            <th>7/8-Y</th>
                            <th>8/9-Y</th>
                            <th>9/10-Y</th>
                            <th>Action</th>

                        </tr>

                    </thead>
                    <tbody>
                        @foreach(var s in Model)
                        {
                            <tr>
                                <td>@s.prod_Id</td>
                                <td>@(s._0to3M.HasValue ? s._0to3M.Value : "N/A")</td>
                                <td>@(s._3to6M.HasValue ? s._3to6M.Value : "N/A")</td>
                                <td>@(s._6to9M.HasValue ? s._6to9M.Value : "N/A")</td>
                                <td>@(s._9to12M.HasValue ? s._9to12M.Value : "N/A")</td>
                                <td>@(s._24to36M.HasValue ? s._24to36M.Value : "N/A")</td>
                                <td>@(s._3to4Y.HasValue ? s._3to4Y.Value : "N/A")</td>
                                <td>@(s._4to5Y.HasValue ? s._4to5Y.Value : "N/A")</td>
                                <td>@(s._5to6Y.HasValue ? s._5to6Y.Value : "N/A")</td>
                                <td>@(s._6to7Y.HasValue ? s._6to7Y.Value : "N/A")</td>
                                <td>@(s._7to8Y.HasValue ? s._7to8Y.Value : "N/A")</td>
                                <td>@(s._8to9Y.HasValue ? s._8to9Y.Value : "N/A")</td>
                                <td>@(s._9to10Y.HasValue ? s._9to10Y.Value : "N/A")</td>
                                <td><a asp-action="UpdateStock"  class="btn btn-warning"><i class="bi bi-pencil"></i>Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mb-3">
                <a asp-action="Index" class="btn btn-info">Product Info</a>
            </div>

            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
