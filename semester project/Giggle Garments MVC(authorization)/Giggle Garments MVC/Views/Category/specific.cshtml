@{
    Layout = "_CustomLayout";
}
@model Product


<title>Giggle Garments-Product</title>
<div class="container mt-5 border-bottom pb-2">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.imagePath.Substring(Model.imagePath.IndexOf("wwwroot")).Replace("wwwroot","")" alt="@Model.name" class="img-fluid">
        </div>
        <div class="col-md-6 mt-5">
            <p class="fs-2 fw-medium">@Model.name</p>
            <div class="border-bottom">
                <label class="fs-5 mb-3">Rs.@string.Format("{0:N2}", Model.price)</label>
            </div>
            <form class="mt-4">
                <!-- <p class="text-muted">Size</p>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 9/12-M" autocomplete="off" checked>
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 9/12-M" >9/12-M</label>
                <input type="radio" class="btn-check " name="options-base" id="(MSFBSK-802) 12/18-M" autocomplete="off" >
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 12/18-M">12/18-M</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 18/24-M" autocomplete="off" >
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 18/24-M">18/24-M</label> -->
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 24/36-M" autocomplete="off" checked>
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 24/36-M">24/36-M</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 3/4-Y" autocomplete="off">
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 3/4-Y">3/4-Y</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 4/5-Y" autocomplete="off">
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 4/5-Y">4/5-Y</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 5/6-Y" autocomplete="off">
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 5/6-Y">5/6-Y</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 6/7-Y" autocomplete="off">
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 6/7-Y">6/7-Y</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 7/8-Y" autocomplete="off">
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 7/8-Y">7/8-Y</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 8/9-Y" autocomplete="off">
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 8/9-Y">8/9-Y</label>
                <input type="radio" class="btn-check" name="options-base" id="(MSFBSK-802) 9/10-Y" autocomplete="off">
                <label class="btn fw-medium mb-2" for="(MSFBSK-802) 9/10-Y">9/10-Y</label>
                <div class="quantity-control d-flex align-items-center ">

                    <div class="mt-5">
                        <p class="text-muted mb-2">Quantity:</p>
                        <div class="quantity-control  d-flex align-items-center w-50 justify-content-between" style="border: 1px solid; ">
                            <button class="btn btn-sm px-0 bg-transparent border-0" onclick="this.parentNode.querySelector('input[type=number]').stepDown(); event.preventDefault();">
                                <i class="bi bi-dash text-black fs-5"></i>
                            </button>

                            <input id="form1" min="0" name="quantity" value="1" type="number" class="form-control form-control-sm text-center  border-0" />

                            <button class="btn btn-sm px-0 bg-transparent border-0" onclick="this.parentNode.querySelector('input[type=number]').stepUp(); event.preventDefault();">
                                <i class="bi bi-plus text-black fs-5"></i>
                            </button>
                        </div>
                    </div>

                </div>
                <div class="mt-4  ">
                    <button type="submit" class="btn btn-dark btn-block w-75 fw-medium " style="height: 50px;">
                         ADD TO BASKET
                    </button>

                </div>
            </form>
            
               @{
                   string [] desc=@Model.description.Split(",");
                }
             
            <div class="mt-3 border-bottom">
                <p class="fs-5"><i class="bi bi-plus-circle pe-2 " data-bs-toggle="collapse" data-bs-target="#productdetail" aria-expanded="false" aria-controls="productdetail"></i>Product Detail</p>
                <div class="collapse " id="productdetail">
                    <p class=" ms-4 ">
                        <span class="fw-medium text-muted">Fabric: </span><span class="text-uppercase text-muted">@desc[0]</span><br>
                        <span class="fw-medium text-muted">Details: </span><span class="text-muted text-capitalize">@desc[1]</span><br>
                        <span class="fw-medium text-muted">Color: </span><span class="text-muted text-capitalize">@desc[2]</span><br>
                        <span class="fw-medium text-muted">Gender: </span><span class="text-muted text-uppercase">@desc[3]</span>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>